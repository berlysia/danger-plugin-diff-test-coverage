{
  "name": "diff-test-coverage",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "run-p lint:*",
    "lint:eslint": "eslint '**/*.{js,ts,jsx,tsx}'",
    "lint:prettier": "prettier . --check",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "test": "jest",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@berlysia/eslint-config": "3.0.0-alpha.2",
    "@types/jest": "^27.0.2",
    "danger": "^10.7.0",
    "eslint": "^8.0.1",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4",
    "utility-types": "^3.10.0"
  },
  "jest": {
    "coverageReporters": [
      "json",
      "text"
    ],
    "collectCoverage": true,
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "sourcemap": true
        }
      ]
    }
  }
}
